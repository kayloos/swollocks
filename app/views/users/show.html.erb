<h1>Din side<h1>
<h2>
  <%= h @user.name %>, <%= @user.email %><br />
  <%= gravatar_for @user %>
</h2>
<%= link_to "Ny liste", :controller => "lists", :action => "new" %>
<% @list.each do |list| %>
  <h2><%= list.name %><%= link_to "x", list, :method => "delete", :confirm => "Sikker på at du vil slette listen?" %></h2>
  <% if signed_in? %>
<%= link_to "Tilføj aktier", :controller => "stocks", :action => "new", :list_id => list.id %>
  <% end %>
<p>
<%
  stock = Stock.find_all_by_list_id(list.id)
  stock.each do |stock| %>
  <%= stock.name %><span style="width:100px"></span><%= link_to "x", stock, :method => "delete", :confirm => "Sure?" %><br />
<% end %>
</p>
<% end %>
