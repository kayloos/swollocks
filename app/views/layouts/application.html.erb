<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <%= stylesheet_link_tag '960', 'jquery.jgrowl', 'jquery-ui', 'table_jui', 'custom' %>
  <%= javascript_include_tag 'jquery', 'rails', 'jquery-ui', 'jquery.dataTables.min.js', 'jquery.jgrowl_minimized.js', 'jquery.simplemodal', 'application' %>
  <%= csrf_meta_tag %>
  <meta name="description" content="<%= @meta_description %>" />
  <meta name="keywords" content="<%= @meta_keywords %>" />
  <!--[if !IE 7]>
    <style type="text/css">
      #wrap {display:table;height:100%}
    </style>
  <![endif]-->  
  <%= render 'layouts/ga' if Rails.env.production? %>
</head>
<body>
<div id="wrap">
<%= render 'layouts/header' %>
  <div id="main">
    <%= yield %>
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>
    <%= debug(params) if Rails.env.development? %>
  </div>
</div>
<% #render 'layouts/footer' %>
</body>
</html>
