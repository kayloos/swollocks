<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<%= render 'layouts/header' %>
<div id="container">
  <div id="main">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
    <% end %>
      <%= yield %>
  </div>
  <div id="footer">
  </div>
  <%= debug(params) if Rails.env.development? %>
</div>
</body>
</html>
